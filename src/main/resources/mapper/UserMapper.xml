<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.xmut.examsys.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="edu.xmut.examsys.bean.User">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="TINYINT"/>
        <result property="realName" column="real_name" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="birth" column="birth" jdbcType="DATE"/>
        <result property="desc" column="desc" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="idCard" column="id_card" jdbcType="VARCHAR"/>
        <result property="role" column="role" jdbcType="TINYINT"/>
        <result property="deptId" column="dept_id" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,username,sex,
        real_name,email,birth,
        desc, password,id_card,
            role,dept_id, status,
            phone,avatar,create_time,
            update_time,is_deleted
    </sql>
    <insert id="insert">
        insert into user(id, username, sex, real_name, password,
                         role, phone)
        values (#{id}, #{username}, #{sex}, #{realName}, #{password}, #{role}, #{phone});
    </insert>
    <update id="update">
        update user
        <set>
            <if test="sex !=null">
                sex = #{sex},
            </if>
            <if test="realName !=null">
                real_name = #{realName},
            </if>
            <if test="email !=null">
                email = #{email},
            </if>
            <if test="birth !=null">
                birth = #{birth},
            </if>
            <if test="phone !=null">
                phone = #{phone},
            </if>
            <if test="status !=null">
                `status` = #{status}
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="selectById" resultType="edu.xmut.examsys.bean.User">
        select *
        from user
        where id = #{userId}
    </select>
    <select id="selectByRoleUser" resultType="edu.xmut.examsys.bean.User">
        select * from user
        <where>
            <if test="role != null">
                and `role` = #{role}
            </if>
        </where>
    </select>


</mapper>
